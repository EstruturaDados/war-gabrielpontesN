#include <stdio.h>
#include <string.h>

/*
    Sistema de Cadastro de Territórios
    Desenvolvido por: [GABRIEL PONTES NASCIMENTO]
    Descrição:
        O programa armazena informações de 5 territórios,
        incluindo nome, cor do exército e número de tropas.
*/

typedef struct {
    char nome[30];
    char cor[10];
    int tropas;
} Territorio;

int main() {
    Territorio lista[5];
    int i;

    printf("===== CADASTRO DE TERRITÓRIOS =====\n\n");

    for (i = 0; i < 5; i++) {
        printf(">>> Território %d\n", i + 1);

        printf("Nome: ");
        fgets(lista[i].nome, sizeof(lista[i].nome), stdin);
        lista[i].nome[strcspn(lista[i].nome, "\n")] = '\0';

        printf("Cor do exército: ");
        fgets(lista[i].cor, sizeof(lista[i].cor), stdin);
        lista[i].cor[strcspn(lista[i].cor, "\n")] = '\0';

        printf("Número de tropas: ");
        scanf("%d", &lista[i].tropas);
        getchar(); // limpa o buffer

        printf("\n");
    }

    printf("===== TERRITÓRIOS CADASTRADOS =====\n\n");

    for (i = 0; i < 5; i++) {
        printf("[%d] %s\n", i + 1, lista[i].nome);
        printf("Cor: %s\n", lista[i].cor);
        printf("Tropas: %d\n", lista[i].tropas);
        printf("-------------------------\n");
    }

    printf("Cadastro finalizado!\n");

    return 0;
}
